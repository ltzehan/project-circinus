\newcommand{\degree}{{}^{\circ}}
\newcommand{\sexg}[3]{%
    \ifthenelse{\isempty{#2}}%
        {{#1}\degree}%
        {\ifthenelse{\isempty{#3}}%
            {{#1}\degree {#2}'}%
            {{#1}\degree {#2}' {#3}''}%
        }%
}%
\newcommand{\hms}[3]{%
    \ifthenelse{\isempty{#2}}%
        {{#1}^{\mathrm{h}}}%
        {\ifthenelse{\isempty{#3}}%
            {{#1}^{\mathrm{h}} {#2}^{\mathrm{m}}}%
            {{#1}^{\mathrm{h}} {#2}^{\mathrm{m}} {#3}^{\mathrm{s}}}%
        }%
}%
